<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,width=device-width,initial-scale=1.0,user-scalable=no" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="renderer" content="webkit" />
    <meta name="robots" content="noindex, nofollow" />
    <meta name="format-detection" content="telephone=no" />
    <title>@ViewBag.Title - 商户管理系统</title>
    <link rel="stylesheet" href="~/css/html5.css" media="all" />
    @RenderSection("header", false)
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />
</head>
<body>
    @{
        string selectedNav = ViewBag.Nav;
    }
    <a class="nav-logo"><link rel="stylesheet" href="~/css/global.css" media="all" /></a>
    <div id="nav-view" class="open">
        <a class="nav-logo" href="/"><img alt="商户管理系统" src="~/images/logo.png" /></a>
        <div class="nav-scroll">
            <nav>
                <a class="@if (selectedNav == "home") {<text>selected</text>} gq-singleline" href="/"><span class="gq-icon">&#xe910;</span><span class="text">主页</span></a>
                <a class="@if (selectedNav == "apps") {<text>selected</text>} gq-singleline" href="apps/index"><span class="gq-icon">&#xe6f0;</span><span class="text">应用</span></a>
                <a class="@if (selectedNav == "orders") {<text>selected</text>} gq-singleline" href="orders/index"><span class="gq-icon">&#xe60b;</span><span class="text">订单</span></a>
                <a class="@if (selectedNav == "waybills") {<text>selected</text>} gq-singleline" href="waybills/index"><span class="gq-icon">&#xe692;</span><span class="text">运单</span></a>
                <a class="@if (selectedNav == "refunds") {<text>selected</text>} gq-singleline" href="refunds/index"><span class="gq-icon">&#xe630;</span><span class="text">退款</span></a>
                <a class="@if (selectedNav == "disputes") {<text>selected</text>} gq-singleline" href="disputes/index"><span class="gq-icon">&#xe6f1;</span><span class="text">争议</span></a>
                <a class="@if (selectedNav == "supports") {<text>selected</text>} gq-singleline" href="supports/index"><span class="gq-icon">&#xe66f;</span><span class="text">客户服务</span></a>
                <a class="@if (selectedNav == "drawcashs") {<text>selected</text>} gq-singleline" href="drawcashs/index"><span class="gq-icon">&#xe602;</span><span class="text">提现</span></a>
                <a class="@if (selectedNav == "reports") {<text>selected</text>} gq-singleline" href="reports/index"><span class="gq-icon">&#xe6bf;</span><span class="text">报表</span></a>
                <a class="@if (selectedNav == "notices") {<text>selected</text>} gq-singleline" href="notices/index"><span class="gq-icon">&#xe604;</span><span class="text">公告</span></a>
                <a class="@if (selectedNav == "users") {<text>selected</text>} gq-singleline" href="users/index"><span class="gq-icon">&#xe60e;</span><span class="text">用户</span></a>
                <a class="@if (selectedNav == "risks") {<text>selected</text>} gq-singleline" href="risks/index"><span class="gq-icon">&#xe644;</span><span class="text">风控管理</span></a>
                <a class="@if (selectedNav == "info") {<text>selected</text>} gq-singleline" href="info/index"><span class="gq-icon">&#xe779;</span><span class="text">账户设置</span></a>
            </nav>
        </div>
        <div class="nav-bar" onclick="Gq.nav()"><span class="icon"></span><span class="text">收缩菜单栏</span></div>
    </div>
    <div id="main-view">
        <div id="top-view">
            <h1 class="gq-singleline">@ViewBag.Title</h1>
            <div>
                <a class="user" href="info/index" title="111111">您好，</a>
                <a class="logoff" href="account/logoff" title="安全退出">[退出]</a>
            </div>
        </div>
        <div id="scroll-view">
            @if (IsSectionDefined("filter"))
            {
                <div id="filter-view" class="gq-radius-little">
                    <a class="left" href="javascript:;">‹</a>
                    <div class="scroll">
                        <input type="text" name="q" placeholder="查询从这里开始" autocomplete="off" />
                    </div>
                    <a class="right" href="javascript:;">›</a>
                    <button id="filter-button" type="button">高级查询</button>
                    <ul class="conditions"></ul>
                    <ul class="values"></ul>
                </div>
                <div id="filter-form">
                    @RenderSection("filter", false)
                </div>
            }
            @if (IsSectionDefined("shortcuts"))
            {
                <div id="shortcuts-view" class="gq-clearfix">
                    @RenderSection("shortcuts", false)
                </div>
            }
            @RenderBody()
            <p class="copyright gq-noselect">© @DateTime.Today.Year  保留所有版权</p>
        </div>
    </div>
    <script src="~/js/gq.js" type="text/javascript"></script>
    @RenderSection("footer", false)
    <!--@Environment.MachineName-->
</body>
</html>
